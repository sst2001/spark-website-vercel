      <media:description>thumbnail</media:description>
    </media:content>
    <media:content medium="image" url="https://irp.cdn-website.com/b270784e/dms3rep/multi/shlomoto_MASKdraw_realistic_picture_of_two_mountains_with_a_narrow__af327ce3-e7b8-42ea-aa52-fe0e89a1d1a4+%281%29.png">
